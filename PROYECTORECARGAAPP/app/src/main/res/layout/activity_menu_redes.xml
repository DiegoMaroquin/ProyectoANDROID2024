<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuRedes">

    <Button
        android:id="@+id/btnVolver4"
        android:layout_width="71dp"
        android:layout_height="70dp"
        android:background="@drawable/botonvolver"
        android:text="."
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.313" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="171dp"
        android:layout_height="45dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="Precios"
        android:textAlignment="center"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.224" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Redes sociales"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.174" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="99dp"
        android:layout_height="86dp"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/precio" />

    <ScrollView
        android:layout_width="345dp"
        android:layout_height="409dp"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="41dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.583"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.881">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Botón 1 -->

            <Button
                android:id="@+id/btnPrecio1R"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E4002B"
                android:text="Q6"
                android:textSize="24sp" />

            <!-- Botón 2 -->

            <Button
                android:id="@+id/btnPrecio2R"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E4002B"
                android:text="Q25"
                android:textSize="24sp" />

            <!-- Botón 3 -->
            <Button
                android:id="@+id/btnPrecio3R"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E4002B"
                android:text="Q60"
                android:textSize="24sp" />

            <!-- Botón 4 -->
            <Button
                android:id="@+id/btnPrecio4R"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E4002B"
                android:text="Q11"
                android:textSize="24sp" />

            <!-- Botón 5 -->
            <Button
                android:id="@+id/btnPrecio5R"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E4002B"
                android:text="Q15"
                android:textSize="24sp" />

            <!-- Botón 6 -->
            <Button
                android:id="@+id/btnPrecio6R"
                android:layout_width="230dp"
                android:layout_height="70dp"
                android:layout_marginBottom="10dp"
                android:backgroundTint="#E4002B"
                android:text="Q30"
                android:textSize="24sp" />

        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>